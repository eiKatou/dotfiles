{
  "title": "For Japanese （日本語環境向けの設定） (rev 3)",
  "rules": [
    {
      "description": "Ctr+Oキーを押したときに、かなキーを送信する。Ctr+Iキーを押した時に英数キーを送信する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
						"modifiers": {
              "mandatory": [
                "control"
              ]
						}
          },
          "to": [
            {
              "key_code": "japanese_kana"
            }
          ]
        },
				{
          "type": "basic",
          "from": {
            "key_code": "i",
						"modifiers": {
              "mandatory": [
                "control"
              ]
						}
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
			]
    }
	]
}
 
